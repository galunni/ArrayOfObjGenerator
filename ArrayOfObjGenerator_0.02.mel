        //      move 0 0 0 ("_" + $power + "copia_" + $i + ".scalePivot") ("_" + $power + "copia_" + $i + ".rotatePivot"); 
    }
}

proc aggiorna_rZ(int $power, int $istanze, float $ruotaZ)
